{
  "manifest_version": 2,
  "name": "Cookie Counter",
  "version": "0.13",

  "description": "Counts Cookies Blocked by Enhanced Tracking Protection.",

  "applications": {
    "gecko": {
      "id": "cookie_counter@arthuredelstein.net"
    }
  },

  "icons": {
    "48": "cookie-icon-48.png"
  },

  "browser_action": {
    "default_icon": "cookie-icon-48.png",
    "default_title": "Cookie Counter",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "webNavigation",
    "storage"
  ],

  "experiment_apis": {
    "contentBlocking": {
      "schema": "experiment/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["contentBlocking", "useBasicList"]],
        "script": "experiment/parent-implementation.js"
      }
    }
  }
}
